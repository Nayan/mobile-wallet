<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Balance"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/value_18sp"
                android:layout_marginLeft="@dimen/value_20dp"
                android:layout_marginTop="@dimen/value_20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_10dp">

                <TextView
                    android:id="@+id/tv_account_balance"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/value_20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/value_20dp"
                    android:layout_marginBottom="@dimen/value_20dp"
                    android:layout_alignParentLeft="true"/>


                <TextView
                    android:id="@+id/tv_view_details"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIEW TRANSACTION HISTORY"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/value_20dp"
                    android:paddingLeft="@dimen/value_20dp"
                    android:layout_marginRight="@dimen/value_20dp"
                    android:textSize="@dimen/value_14sp"
                    android:textColor="@color/primaryDarkBlue"
                    android:gravity="bottom"
                    android:paddingTop="@dimen/value_5dp"/>

            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/value_20dp"
            android:layout_marginBottom="@dimen/value_20dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_repeat_selector"
                android:text="History"
                android:gravity="center"
                android:drawablePadding="@dimen/value_10dp"
                android:id="@+id/btn_history"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_send_selector"
                android:text="Send"
                android:gravity="center"
                android:drawablePadding="@dimen/value_10dp"
                android:id="@+id/btn_send"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_request_selector"
                android:text="Request"
                android:gravity="center"
                android:drawablePadding="@dimen/value_10dp"
                android:id="@+id/btn_request"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/qrcode_black_selector"
                android:text="QR code"
                android:gravity="center"
                android:id="@+id/btn_show_qr"
                android:drawablePadding="@dimen/value_10dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value_20dp"
            android:layout_marginTop="@dimen/value_20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_addBankAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/value_10dp"
                android:drawableTop="@drawable/ic_bank"
                android:gravity="center"
                android:text="Add Bank Account"/>

            <TextView
                android:id="@+id/btn_kyc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/value_10dp"
                android:drawableTop="@drawable/ic_account_balance_wallet"
                android:gravity="center"
                android:text="Complete KYC"/>

            <TextView
                android:id="@+id/btn_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/value_10dp"
                android:drawableTop="@drawable/ic_saved_cards"
                android:gravity="center"
                android:text="Saved Cards"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>