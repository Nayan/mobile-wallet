<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/value_10dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_search_merchants"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_et_round_border"
                android:drawableLeft="@drawable/et_search"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/et_search"
                android:hint="@string/search"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:drawableRight="@drawable/ic_cross"
                android:drawableEnd="@drawable/ic_cross"
                android:paddingRight="@dimen/value_15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:id="@+id/et_cross_merchants"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/value_15dp"
                    android:paddingRight="@dimen/value_30dp"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_merchants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/value_10dp"
            android:clipToPadding="false"/>

    </LinearLayout>
</FrameLayout>