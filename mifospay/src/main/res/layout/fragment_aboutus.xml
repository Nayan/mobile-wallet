<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_about"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="436dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_version"
            android:textSize="15dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/layout_padding_16dp"
            android:src="@mipmap/mifos_icon" />

        <TextView
            android:id="@+id/tv_copy_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/copy_right_mifos"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/all_rights_reserved" />

        <TextView
            android:id="@+id/tv_licenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_padding_48dp"
            android:layout_marginBottom="@dimen/layout_padding_4dp"
            android:text="@string/licenses"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/text_medium"
            />

        <TextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/privacy_policy"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/text_medium" />


    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_padding"
        android:paddingTop="@dimen/default_padding">

        <TextView
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/row_padding_right"
            android:layout_marginStart="@dimen/row_padding_right"
            android:layout_marginTop="@dimen/divider_margin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/need_help"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/row_padding_right"
            android:layout_marginRight="@dimen/row_padding_right"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <TextView
                android:autoLink="phone"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/divider_margin"
                android:layout_width="match_parent"
                android:text="@string/help_line_number"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold"/>

            <TextView
                android:autoLink="email"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/divider_margin"
                android:layout_width="match_parent"
                android:text="@string/contact_email"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
