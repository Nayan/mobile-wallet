                        android:orientation="vertical"
                        android:padding="@dimen/value_10dp">

                        <TextView
                            android:id="@+id/lvl2text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/value_10dp"
