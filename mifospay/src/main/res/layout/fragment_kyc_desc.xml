                        <!--android:layout_marginTop="@dimen/value_10dp"-->
                        <!--android:text="@string/level_3_description"-->
                        <!--android:textColor="@color/gray"/>-->

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <ImageView
                    android:id="@+id/img3"

                    android:layout_width="@dimen/value_20dp"
                    android:layout_height="@dimen/value_20dp"
                    android:layout_marginTop="@dimen/value_45dp"
                    android:layout_marginLeft="@dimen/value_10dp"
                    />
                <TextView
                    android:id="@+id/completed3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_40dp"
                    android:layout_marginLeft="@dimen/value_30dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
