                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/value_20dp"
                    android:layout_height="@dimen/value_20dp"
                    android:layout_marginTop="58dp"
                    />

                <TextView
                    android:id="@+id/completed1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_55dp"
                    android:layout_marginLeft="@dimen/value_20dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_lvl2"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:layout_marginBottom="@dimen/value_30dp"
                    android:clickable="true"
                    app:cardCornerRadius="@dimen/value_10dp">

                    <LinearLayout
                        android:id="@+id/ll_lvl2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
